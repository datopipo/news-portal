{% extends 'base.html.twig' %}

{% block title %}{{ category.title }} - News Portal{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Category Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold text-gray-900">{{ category.title }}</h1>
            <p class="text-gray-600 mt-2">{{ totalItems }} news articles</p>
        </div>
        <a href="{{ path('app_home') }}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            ‚Üê Back to Home
        </a>
    </div>

    <!-- News List -->
    {% if news|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            {% for article in news %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden news-card hover:shadow-lg transition-shadow duration-200">
                    {% if article.picture %}
                        <img src="{{ asset('uploads/pictures/' ~ article.picture) }}" 
                             class="w-full h-48 object-cover" 
                             alt="{{ article.title }}">
                    {% else %}
                        <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
                            <span class="text-4xl text-gray-400">üì∞</span>
                        </div>
                    {% endif %}
                    
                    <div class="p-6">
                        <h5 class="text-lg font-semibold mb-2">
                            <a href="{{ path('app_news_show', {id: article.id}) }}" 
                               class="text-gray-900 hover:text-blue-600 transition-colors duration-200">
                                {{ article.title }}
                            </a>
                        </h5>
                        
                        <div class="flex items-center text-sm text-gray-500 mb-3">
                            <span>{{ article.insertDate|date('M d, Y') }}</span>
                            <span class="mx-2">‚Ä¢</span>
                            <span>{{ article.viewCount }} views</span>
                            <span class="mx-2">‚Ä¢</span>
                            <span>{{ article.comments|length }} comments</span>
                        </div>
                        
                        <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                            {{ article.shortDescription|length > 120 ? 
                               article.shortDescription|slice(0, 120) ~ '...' : 
                               article.shortDescription }}
                        </p>
                        
                        <div class="flex justify-between items-center">
                            <a href="{{ path('app_news_show', {id: article.id}) }}" 
                               class="inline-block px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors duration-200">
                                Read More
                            </a>
                            
                            {% if article.categories|length > 1 %}
                                <div class="flex flex-wrap gap-1">
                                    {% for cat in article.categories %}
                                        {% if cat.id != category.id %}
                                            <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">{{ cat.title }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if totalPages > 1 %}
            <nav class="flex justify-center" aria-label="News pagination">
                <div class="flex items-center space-x-1">
                    <!-- Previous Page -->
                    {% if currentPage > 1 %}
                        <a href="{{ path('app_category_show', {id: category.id, page: currentPage - 1}) }}" 
                           class="px-3 py-2 text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-700 transition-colors duration-200">
                            Previous
                        </a>
                    {% else %}
                        <span class="px-3 py-2 text-gray-300 bg-white border border-gray-300 rounded-md cursor-not-allowed">
                            Previous
                        </span>
                    {% endif %}

                    <!-- Page Numbers -->
                    {% set startPage = max(1, currentPage - 2) %}
                    {% set endPage = min(totalPages, currentPage + 2) %}

                    {% if startPage > 1 %}
                        <a href="{{ path('app_category_show', {id: category.id, page: 1}) }}" 
                           class="px-3 py-2 text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-700 transition-colors duration-200">
                            1
                        </a>
                        {% if startPage > 2 %}
                            <span class="px-3 py-2 text-gray-300 bg-white border border-gray-300 rounded-md cursor-default">
                                ...
                            </span>
                        {% endif %}
                    {% endif %}

                    {% for page in startPage..endPage %}
                        {% if page == currentPage %}
                            <span class="px-3 py-2 text-white bg-blue-600 border border-blue-600 rounded-md font-medium">
                                {{ page }}
                            </span>
                        {% else %}
                            <a href="{{ path('app_category_show', {id: category.id, page: page}) }}" 
                               class="px-3 py-2 text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-700 transition-colors duration-200">
                                {{ page }}
                            </a>
                        {% endif %}
                    {% endfor %}

                    {% if endPage < totalPages %}
                        {% if endPage < totalPages - 1 %}
                            <span class="px-3 py-2 text-gray-300 bg-white border border-gray-300 rounded-md cursor-default">
                                ...
                            </span>
                        {% endif %}
                        <a href="{{ path('app_category_show', {id: category.id, page: totalPages}) }}" 
                           class="px-3 py-2 text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-700 transition-colors duration-200">
                            {{ totalPages }}
                        </a>
                    {% endif %}

                    <!-- Next Page -->
                    {% if currentPage < totalPages %}
                        <a href="{{ path('app_category_show', {id: category.id, page: currentPage + 1}) }}" 
                           class="px-3 py-2 text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-700 transition-colors duration-200">
                            Next
                        </a>
                    {% else %}
                        <span class="px-3 py-2 text-gray-300 bg-white border border-gray-300 rounded-md cursor-not-allowed">
                            Next
                        </span>
                    {% endif %}
                </div>
            </nav>
        {% endif %}
    {% else %}
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 text-center">
            <div class="text-6xl mb-4">üì∞</div>
            <h4 class="text-xl font-semibold text-blue-800 mb-2">No News Available</h4>
            <p class="text-blue-600">There are no news articles in the "{{ category.title }}" category yet. Please check back later!</p>
        </div>
    {% endif %}
</div>
{% endblock %} 