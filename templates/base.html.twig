<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}News Portal{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <!-- Tailwind CSS -->
        <script src="https://cdn.tailwindcss.com"></script>
        
        {% block stylesheets %}
        <style>
            .news-card {
                transition: transform 0.2s;
            }
            .news-card:hover {
                transform: translateY(-2px);
            }
            .category-section {
                margin-bottom: 3rem;
            }
            .news-image {
                height: 200px;
                object-fit: cover;
            }
            .news-thumbnail {
                height: 150px;
                object-fit: cover;
            }
            .admin-sidebar {
                min-height: 100vh;
                background-color: #f8f9fa;
            }
            .comment-item {
                border-left: 3px solid #007bff;
                padding-left: 1rem;
            }
        </style>
        {% endblock %}
    </head>

    <body class="bg-gray-50">
        <!-- Navigation -->
        <nav class="bg-blue-600 text-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex justify-between items-center h-16">
                    <div class="flex items-center">
                        <a class="text-xl font-bold" href="{{ path('app_home') }}">üì∞ News Portal</a>
                    </div>
                    
                    <div class="hidden md:flex items-center space-x-6">
                        <a class="hover:text-blue-200 transition-colors duration-200" href="{{ path('app_home') }}">Home</a>
                        
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="hover:text-blue-200 transition-colors duration-200" href="{{ path('app_admin_dashboard') }}">Admin Panel</a>
                            <a class="hover:text-blue-200 transition-colors duration-200" href="{{ path('app_logout') }}">Logout</a>
                        {% else %}
                            <a class="hover:text-blue-200 transition-colors duration-200" href="{{ path('app_admin_login') }}">Admin Login</a>
                        {% endif %}
                    </div>
                    
                    <!-- Mobile menu button -->
                    <div class="md:hidden">
                        <button type="button" class="text-white hover:text-blue-200" onclick="toggleMobileMenu()">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                </div>
                
                <!-- Mobile menu -->
                <div id="mobileMenu" class="hidden md:hidden pb-4">
                    <a class="block py-2 hover:text-blue-200 transition-colors duration-200" href="{{ path('app_home') }}">Home</a>
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="block py-2 hover:text-blue-200 transition-colors duration-200" href="{{ path('app_admin_dashboard') }}">Admin Panel</a>
                        <a class="block py-2 hover:text-blue-200 transition-colors duration-200" href="{{ path('app_logout') }}">Logout</a>
                    {% else %}
                        <a class="block py-2 hover:text-blue-200 transition-colors duration-200" href="{{ path('app_admin_login') }}">Admin Login</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="max-w-7xl mx-auto px-4 mt-4">
                    <div class="p-4 rounded-md {% if type == 'error' %}bg-red-50 border border-red-200 text-red-800{% elseif type == 'success' %}bg-green-50 border border-green-200 text-green-800{% else %}bg-blue-50 border border-blue-200 text-blue-800{% endif %}">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Main Content -->
        <main class="min-h-screen">
        {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="bg-gray-800 text-white py-8 mt-12">
            <div class="max-w-7xl mx-auto px-4">
                <div class="grid md:grid-cols-2 gap-8">
                    <div>
                        <h5 class="text-xl font-bold mb-2">News Portal</h5>
                        <p class="text-gray-300">Your trusted source for the latest news and updates.</p>
                    </div>
                    <div class="md:text-right">
                        <p class="text-gray-300">&copy; {{ 'now'|date('Y') }} News Portal. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </footer>

        <script>
            function toggleMobileMenu() {
                const menu = document.getElementById('mobileMenu');
                menu.classList.toggle('hidden');
            }
        </script>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
