{% extends 'base.html.twig' %}

{% block title %}Home - News Portal{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Latest News by Category</h1>
        <p class="text-gray-600">Stay updated with the latest news across different categories</p>
    </div>
    
    {% if categoriesWithNews is empty %}
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 text-center">
            <div class="text-6xl mb-4">ðŸ“°</div>
            <h4 class="text-xl font-semibold text-blue-800 mb-2">Welcome to News Portal!</h4>
            <p class="text-blue-600">No categories or news available yet. Please check back later or contact the administrator.</p>
        </div>
    {% else %}
        {% for categoryData in categoriesWithNews %}
            <div class="mb-12">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-blue-600">{{ categoryData.category.title }}</h2>
                    {% if categoryData.news|length > 0 %}
                        <a href="{{ path('app_category_show', {id: categoryData.category.id}) }}" 
                           class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                            View All â†’
                        </a>
                    {% endif %}
                </div>
                
                {% if categoryData.news is empty %}
                    <p class="text-gray-500 italic">No news available in this category yet.</p>
                {% else %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for news in categoryData.news %}
                            <div class="bg-white rounded-lg shadow-md overflow-hidden news-card hover:shadow-lg transition-shadow duration-200">
                                {% if news.picture %}
                                    <img src="{{ asset('uploads/pictures/' ~ news.picture) }}" 
                                         class="w-full h-48 object-cover" 
                                         alt="{{ news.title }}">
                                {% else %}
                                    <div class="w-full h-48 bg-gray-100 flex items-center justify-content-center">
                                        <span class="text-4xl text-gray-400">ðŸ“°</span>
                                    </div>
                                {% endif %}
                                
                                <div class="p-6">
                                    <h5 class="text-lg font-semibold mb-2">
                                        <a href="{{ path('app_news_show', {id: news.id}) }}" 
                                           class="text-gray-900 hover:text-blue-600 transition-colors duration-200">
                                            {{ news.title }}
                                        </a>
                                    </h5>
                                    
                                    <div class="flex items-center text-sm text-gray-500 mb-3">
                                        <span>{{ news.insertDate|date('M d, Y') }}</span>
                                        <span class="mx-2">â€¢</span>
                                        <span>{{ news.viewCount }} views</span>
                                    </div>
                                    
                                    <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                                        {{ news.shortDescription|length > 100 ? 
                                           news.shortDescription|slice(0, 100) ~ '...' : 
                                           news.shortDescription }}
                                    </p>
                                    
                                    <a href="{{ path('app_news_show', {id: news.id}) }}" 
                                       class="inline-block px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors duration-200">
                                        Read More
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %} 