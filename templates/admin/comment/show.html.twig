{% extends 'admin/base.html.twig' %}

{% block title %}Comment Details{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Comment Details</h1>
            
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ comment.author }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ comment.email }}</h6>
                    <p class="card-text">{{ comment.content }}</p>
                    
                    <hr>
                    
                    <p><strong>News:</strong> 
                        <a href="{{ path('app_admin_news_show', {'id': comment.news.id}) }}">
                            {{ comment.news.title }}
                        </a>
                    </p>
                    <p><strong>Posted:</strong> {{ comment.createdAt|date('Y-m-d H:i:s') }}</p>
                    
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_admin_comment_index') }}" class="btn btn-secondary">Back to list</a>
                        <form method="post" action="{{ path('app_admin_comment_delete', {'id': comment.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this comment?')">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 