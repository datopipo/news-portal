{% extends 'admin/base.html.twig' %}

{% block title %}Edit Category - Admin Panel{% endblock %}
{% block page_title %}Edit Category{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                <div>
                    {{ form_label(form.title, 'Category Title', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.title, {
                        'attr': {
                            'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500',
                            'placeholder': 'Enter category title'
                        }
                    }) }}
                    <div class="mt-2 text-sm text-gray-500">Enter a descriptive title for this category</div>
                    {{ form_errors(form.title) }}
                </div>

                <!-- Related News Section with extra spacing -->
                <div class="pt-4 border-t border-gray-100">
                    {{ form_label(form.news, 'Related News', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                    {{ form_widget(form.news, {
                        'attr': {
                            'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 min-h-[120px]',
                            'size': '8'
                        }
                    }) }}
                    <div class="mt-2 text-sm text-gray-500">
                        <span class="inline-flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Hold Ctrl/Cmd to select multiple news items for this category
                        </span>
                    </div>
                    {{ form_errors(form.news) }}
                </div>

                <div class="flex justify-between items-center pt-8 border-t border-gray-200">
                    <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200 shadow-sm">
                        <span class="inline-flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Save Changes
                        </span>
                    </button>
                    {{ include('admin/category/_delete_form.html.twig') }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 