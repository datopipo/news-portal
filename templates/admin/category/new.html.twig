{% extends 'admin/base.html.twig' %}

{% block title %}New Category - Admin Panel{% endblock %}
{% block page_title %}Add New Category{% endblock %}

{% block body %}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-800">Category Information</h5>
            </div>
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                    <div>
                        {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent', 'placeholder': 'Enter category title'}}) }}
                        {{ form_errors(form.title) }}
                    </div>
                    
                    <!-- Related News Section with extra spacing -->
                    <div class="pt-4 border-t border-gray-100">
                        {{ form_label(form.news, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                        {{ form_widget(form.news, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent min-h-[120px]'}}) }}
                        {{ form_errors(form.news) }}
                        <div class="mt-2 text-sm text-gray-500">
                            üí° Hold Ctrl/Cmd to select multiple news articles for this category
                        </div>
                    </div>
                    
                    <div class="flex space-x-4 pt-6">
                        <button type="submit" class="px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors duration-200 shadow-sm">
                            üíæ Save Category
                        </button>
                        <a href="{{ path('app_admin_category_index') }}" class="px-6 py-3 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors duration-200 shadow-sm">
                            ‚ùå Cancel
                        </a>
                    </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
    <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-800">Help</h5>
            </div>
            <div class="p-6">
                <div class="space-y-3">
                    <p class="text-sm"><span class="font-medium text-gray-700">Category Title:</span> <span class="text-gray-600">Enter a descriptive name for this category. This will be displayed on the public website.</span></p>
                    <p class="text-sm"><span class="font-medium text-gray-700">Examples:</span> <span class="text-gray-600">Technology, Sports, Politics, Entertainment, etc.</span></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 