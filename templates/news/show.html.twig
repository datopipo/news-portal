{% extends 'base.html.twig' %}

{% block title %}{{ news.title }} - News Portal{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <!-- News Article -->
            <article class="mb-8">
                <header class="mb-6">
                    <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ news.title }}</h1>
                    
                    <div class="flex flex-wrap items-center text-gray-600 text-sm mb-4 space-x-4">
                        <span class="flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                            </svg>
                            {{ news.insertDate|date('F d, Y \\a\\t g:i A') }}
                        </span>
                        <span class="flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                            </svg>
                            {{ news.viewCount }} views
                        </span>
                        {% if news.categories|length > 0 %}
                            <div class="flex items-center flex-wrap">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                                </svg>
                                {% for category in news.categories %}
                                    <a href="{{ path('app_category_show', {id: category.id}) }}" 
                                       class="inline-block px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full mr-2 hover:bg-blue-200 transition-colors duration-200">
                                        {{ category.title }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </header>

                {% if news.picture %}
                    <div class="mb-6">
                        <img src="{{ asset('uploads/pictures/' ~ news.picture) }}" 
                             class="w-full h-64 md:h-96 object-cover rounded-lg shadow-md" 
                             alt="{{ news.title }}">
                    </div>
                {% endif %}

                <div class="text-xl text-gray-700 leading-relaxed mb-6 font-medium">
                    {{ news.shortDescription }}
                </div>

                <div class="prose prose-lg max-w-none text-gray-800 leading-relaxed">
                    {{ news.content|nl2br }}
                </div>
            </article>

            <!-- Comments Section -->
            <section class="comments-section">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">
                    Comments ({{ news.comments|length }})
                </h3>

                <!-- Add Comment Form -->
                <div class="bg-white rounded-lg shadow-md mb-8">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-800">Add a Comment</h5>
                    </div>
                    <div class="p-6">
                        {{ form_start(commentForm, {'attr': {'class': 'space-y-4'}}) }}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_label(commentForm.authorName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                    {{ form_widget(commentForm.authorName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                                    {{ form_errors(commentForm.authorName) }}
                                </div>
                                <div>
                                    {{ form_label(commentForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                    {{ form_widget(commentForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                                    {{ form_errors(commentForm.email) }}
                                </div>
                            </div>
                            <div>
                                {{ form_label(commentForm.content, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                {{ form_widget(commentForm.content, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', 'rows': '4'}}) }}
                                {{ form_errors(commentForm.content) }}
                            </div>
                            <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                                Post Comment
                            </button>
                        {{ form_end(commentForm) }}
                    </div>
                </div>

                <!-- Comments List -->
                {% if news.comments|length > 0 %}
                    <div class="space-y-4">
                        {% for comment in news.comments %}
                            <div class="bg-gray-50 border-l-4 border-blue-500 rounded-lg p-4">
                                <div class="flex justify-between items-start mb-2">
                                    <div>
                                        <span class="font-semibold text-gray-900">{{ comment.authorName }}</span>
                                        <span class="text-sm text-gray-500 ml-2">
                                            {{ comment.createdAt|date('M d, Y \\a\\t g:i A') }}
                                        </span>
                                    </div>
                                </div>
                                <p class="text-gray-700 leading-relaxed">{{ comment.content|nl2br }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 italic text-center py-8">No comments yet. Be the first to comment!</p>
                {% endif %}
            </section>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
            <div class="sticky top-8 space-y-6">
                <!-- Related Categories -->
                {% if news.categories|length > 0 %}
                    <div class="bg-white rounded-lg shadow-md">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h5 class="text-lg font-semibold text-gray-800">Categories</h5>
                        </div>
                        <div class="p-6">
                            <div class="flex flex-wrap gap-2">
                                {% for category in news.categories %}
                                    <a href="{{ path('app_category_show', {id: category.id}) }}" 
                                       class="inline-block px-3 py-2 border border-blue-600 text-blue-600 text-sm font-medium rounded-md hover:bg-blue-50 transition-colors duration-200">
                                        {{ category.title }}
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- Back to Home -->
                <div class="bg-white rounded-lg shadow-md">
                    <div class="p-6 text-center">
                        <a href="{{ path('app_home') }}" class="inline-block px-6 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 transition-colors duration-200">
                            ‚Üê Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 